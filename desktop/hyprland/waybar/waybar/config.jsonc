{
    "position": "top",
    "layer": "top",
    "height": 16,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": 0,
    "margin-right": 0,
    "modules-left": ["custom/launcher", "hyprland/workspaces", "disk"],
    "modules-center": ["tray", "cpu", "memory"],
    "modules-right": ["custom/headphones", "custom/speakers", "custom/hyprpicker", "wireplumber", "clock"],
    // Modules configuration
	"clock": {
		"format": "ÔÄó {:%H:%M}",
		"tooltip": "true",
        	"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        	"format-alt": "ÔÅ≥ {:%m/%d}",
		"timezone": "EST"
	},
	"hyprland/workspaces": {
        "active-only": false,
        "all-outputs": true,
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
		"format": "{icon}",
		"on-click": "activate",
		"format-icons": {
			"urgent": "ÔÅ™",
			"active": "ÔÜí",
			"default": "Û∞ßû",
    	"sort-by": "number"
    	},
    },

    "memory": {
        "format": "Û∞çõ {}%",
        "format-alt": "Û∞çõ {used}/{total} GiB",
        "interval": 5
    },

    "cpu": {
        "format": "Û∞ª† {usage}%",
        "format-alt": "Û∞ª† {avg_frequency} GHz",
        "interval": 5
    },

    "disk": {
        "format": "Û∞ãä {}%",
        "format-alt": "Û∞ãä {used}/{total} GiB",
        "interval": 5,
        "path": "/"
    },

    "network": {
        "format-wifi": "Û∞§®",
        "format-ethernet": "Ôõø {ifname}: Aesthetic",
        "format-linked": "Ôõø {ifname} (No IP)",
        "format-disconnected": "Û∞§≠",
        "format-alt": "Ôõø {ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}",
        "on-click-right": "nm-connection-editor"
	},

	"tray": {
		"icon-size": 16,
		"spacing": 5,
	},

    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü",
        "format-icons": {
            "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
        },
        "on-click": "wpctl set-mute @DEFAULT_SINK@ toggle",
        "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ .05+",
        "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ .05-",
        "scroll-step": 5,
        "on-click-right": "pavucontrol",
        "max-volume": 100,
        "menu": "pavucontrol"
    },

    "custom/speakers": {
        "format": "{icon}",
        "format-icons": {
            "default": ["üîà"]
        },
        "on-click": "~/.config/waybar/scripts/change-player.sh -s",
		"tooltip": "true",
        "tooltip-format": "Set to speakers",
    },
    "custom/headphones": {
        "format": "{icon}",
        "format-icons": {
            "default": ["üéß"]
        },
        "on-click": "~/.config/waybar/scripts/change-player.sh -h",
		"tooltip": "true",
        "tooltip-format": "Set to headphones",
    },
    "custom/launcher": {
        "format": "Û∞à∏",
        "on-click": "fuzzel",
        "on-click-right": "fuzzel"
    },

    "custom/wf-recorder": {
		"format": "{}",
		"interval": "once",
		"exec": "echo 'Ôäç'",
		"tooltip": "false",
		"exec-if": "pgrep 'wf-recorder'",
		"on-click": "exec ./scripts/wlrecord.sh",
		"signal": 8
    },

    "custom/hyprpicker": {
        "format": "Û∞àã",
        "on-click": "hyprpicker -a -f hex",
        "on-click-right": "hyprpicker -a -f rgb"
    },
  }
}
